{
  "name": "Fitness Extension",
  "version": "1.3",
  "description": "An extension that allows you to set an alarm to do a workout and a new webpage pops up with a workout displayed.",
  "permissions": [ "background", "tts", "alarms", "notifications", "storage"],

  "background": { 
    "scripts": ["common.js", "background.js"],
    "persistent": false 
  },
  "browser_action": {
    "default_icon": "dumbbell16.png",
    "default_title": "Fitness Extension",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "dumbbell16.png",
    "32": "dumbbell32.png",
    "48": "dumbbell48.png",
    "128": "dumbbell128.png"
  },

  "manifest_version": 2
}
